<%- include('partials/header') %>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h2 class="h1 display-4">Administration</h2>
  <p class="lead">Espace permettant de gérer les quizzes !</p>
</div>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h2 class="h1 display-4">Se connecter sur O'Quiz</h2>
  <p class="lead">Une application sympa pour répondre à des questions cool.</p>
</div>

<% if (locals.flash) { %>
 <p class = "alert alert-info"><%- flash %> </p>
<% } %>


<form action="" method="POST" class="form-signup">

  <h3 class="px-3 text-center">Ajouter d'un catégorie </h3>

  <div class="pricing-header px-3 py-3 pt-md-3 pb-md-4 mx-auto text-center">
    <input type="text" class="form-control" name="name" aria-describedby="tagHelp" placeholder="Saisissez une nouvelle catégorie">
  </div>

  <div class="pricing-header px-3 py-3 pt-md-3 pb-md-4 mx-auto text-center">
    <button class="btn btn-lg btn-primary btn-block" type="submit">Créer la catégorie</button>
  </div>

</form>


<form action="/admin/upDate" method="POST" class="form-signup">

  <h3 class="px-3 pt-md-5 mx-auto text-center"> Modifier un Tag </h3>

  <div class="pricing-header px-3 py-3 pt-md-3 pb-md-4 mx-auto text-center">
    <select name="name" required>
      <option value="">Choisir le Tag à modifier</option>
      <% for(tag of tags) { %>
        <option value="<%= tag.id %>"><%= tag.name %></option>
      <% } %>  
    </select>
  </div>

  <div class="pricing-header px-3 py-3 pt-md-3 pb-md-4 mx-auto text-center">
    <label for="tagUpDate">Saisir le nouveau nom de la catégorie</label>
    <input type="text" class="form-control" name="name" id="tagUpDate" placeholder="Saisissez une nouvelle catégorie" required>
  </div>

  <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <button class="btn btn-lg btn-primary btn-block" type="submit">Modifier la catégorie</button>
  </div>

</form>

<form action="/admin/joinTagQuiz" method="POST" class="form-signup">

  <h3 class="px-3 pt-md-5 mx-auto text-center"> Choisir un Tag </h3>

  <div class="pricing-header px-3 py-3 pt-md-3 pb-md-4 mx-auto text-center">
    <select name="name" required>
      <option value="">Choisir le Tag à associer</option>
      <% for(tag of tags) { %>
        <option value="<%= tag.id %>"><%= tag.name %></option>
      <% } %>  
    </select>
  </div>

  <h3 class="px-3 pt-md-5 mx-auto text-center"> choisir un quiz</h3>

  <div class="pricing-header px-3 py-3 pt-md-3 pb-md-4 mx-auto text-center">
    <select name="name" required>
      <option value="">Choisir le quiz</option>
            <% for(quiz of quizzes) { %>
        <option value="<%= quiz.id %>"><%= quiz.title %></option>
      <% } %>  

    </select>
  </div>

  <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <button class="btn btn-lg btn-primary btn-block" type="submit">Associer la catégorie et le quiz</button>
  </div>

  </form>


<%- include('partials/footer') %>